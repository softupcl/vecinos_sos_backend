generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum EmergencyStatus {
  ABIERTA
  EN_PROGRESO
  CERRADA
  CANCELADA
}

enum ContactCategory {
  GENERAL
  PERSONAL
}

model User {
  id            String      @id @default(uuid())
  email         String      @unique
  password      String
  name          String?
  phone         String?
  pushToken     String?
  lat           Float?
  lng           Float?
  role          Role        @default(USER)
  avatar        String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  emergencies   Emergency[] @relation("SenderEmergencies")
  contacts      Contact[]   @relation("UserContacts")
}

model Emergency {
  id          String          @id @default(uuid())
  type        String          // 'Incendio', 'Salud', 'Seguridad', 'Otra'
  senderId    String
  sender      User            @relation("SenderEmergencies", fields: [senderId], references: [id])
  lat         Float
  lng         Float
  address     String?
  status      EmergencyStatus @default(ABIERTA)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
}

model Contact {
  id        String          @id @default(uuid())
  name      String
  phone     String
  email     String?
  category  ContactCategory @default(PERSONAL)
  userId    String?
  user      User?           @relation("UserContacts", fields: [userId], references: [id])
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}
